{
    "id": "arkade",
    "version": "1.0.1",
    "name": "Arkade",
    "documentationURL": "https://github.com/alexellis/arkade",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select or enter an arkade version."
        },
        "kubectl" : {
            "type": "string",
            "proposals": [
                "true",
                "false",
                "latest"
            ],
            "default": "false",
            "description": "Select or enter a kubectl version."
        },
        "helm" : {
            "type": "string",
            "proposals": [
                "true",
                "false",
                "latest"
            ],
            "default": "false",
            "description": "Select or enter a helm version."
        }
    },
    "containerEnv": {
        "PATH": "~/.arkade/bin:${PATH}"
    },
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
